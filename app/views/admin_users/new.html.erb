<h1 class="text-2xl font-bold mb-6">Add New Movie</h1>

<%= form_with model: @movie, url: admin_users_path, local: true, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :title, class: "block text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 p-2 w-full border rounded-lg focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :release_date, class: "block text-gray-700" %>
    <%= form.date_field :release_date, class: "mt-1 p-2 w-full border rounded-lg focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :director, class: "block text-gray-700" %>
    <%= form.text_field :director, class: "mt-1 p-2 w-full border rounded-lg focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.label :synopsis, class: "block text-gray-700" %>
    <%= form.text_area :synopsis, rows: 5, class: "mt-1 p-2 w-full border rounded-lg focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.submit "Add Movie", class: "w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>
<% end %>

<%= link_to 'Back to Movie List', movielist_admin_users_path, class: "mt-4 inline-block py-2 px-4 bg-gray-500 text-white font-semibold rounded-lg shadow-md hover:bg-gray-600 focus:outline-none focus:ring focus:ring-gray-300" %>
