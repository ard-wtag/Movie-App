<!-- app/views/password_resets/new.html.erb -->
<div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold mb-4 text-center">Forgot your password?</h2>
  <%= form_with url: password_reset_path, method: :post, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="text-center">
      <%= form.submit 'Reset Password', class: "w-full py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
