<!-- app/views/admin_users/confirm_user_delete.html.erb -->

<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md text-center">
    <h2 class="text-2xl font-bold mb-6"><%= t('users.delete.confirm_title') %></h2>
    <p class="mb-4"><%= t('users.delete.confirm_message') %></p>
    <p class="mb-6 text-gray-700"><%= @user.first_name %> <%= @user.last_name %> (<%= @user.email %>)</p>

    <div class="flex justify-center space-x-4">
      <%= link_to t('users.delete.cancel'), users_path, class: "py-2 px-4 bg-gray-500 text-white font-semibold rounded-lg shadow-md hover:bg-gray-600 focus:outline-none focus:ring focus:ring-gray-300" %>
      <%= button_to t('users.delete.delete'), user_path(@user), method: :delete, class: "py-2 px-4 bg-red-500 text-white font-semibold rounded-lg shadow-md hover:bg-red-600 focus:outline-none focus:ring focus:ring-red-300" %>
    </div>
  </div>
</div>
