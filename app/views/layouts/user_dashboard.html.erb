<!-- app/views/layouts/user_dashboard.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>User Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", media: 'all', "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100">
<%= render 'layouts/flash_messages' %>
  <div class="min-h-screen flex">
    <% if current_user %>
      <div class="bg-gray-800 text-white w-64 p-6">
        <h1 class="text-2xl font-bold mb-6">User Panel</h1>
        <ul class="space-y-4">
          <li><%= link_to 'User Profile', user_path(current_user), class: "block py-2 px-4 hover:bg-gray-700" %></li>
          <li><%= link_to 'Movie List', movies_path, class: "block py-2 px-4 hover:bg-gray-700" %></li>
          <li><%= button_to 'Log Out', logout_users_path, method: :delete, class: "block py-2 px-4 hover:bg-gray-700" %></li>
        </ul>
      </div>
    <% end %>
    <div class="flex-1">
      <% if logged_in? %>
        <div class="flex justify-end p-4">
          <%= link_to 'Log Out', logout_users_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% else %>
        <div class="flex justify-end p-4 space-x-4">
          <%= link_to 'Log In', login_users_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
          <%= link_to 'Sign Up', new_user_path, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</body>
</html>