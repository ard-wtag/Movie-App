<!-- app/views/layouts/admin_dashboard.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title><%= t('layouts.admin_dashboard.title') %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font" %>
  <%= stylesheet_link_tag "application" %>

  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100">

  <% if flash.any? %>
    <% flash.each do |key, value| %>
      <div class="flash <%= flash_class(key) %> p-4 rounded mb-4">
          <%= value %>
      </div>
    <% end %>
  <% end %>

  <div class="min-h-screen flex">
    <div class="bg-gray-800 text-white w-64 p-6">
      <h1 class="text-2xl font-bold mb-6"><%= t('layouts.admin_dashboard.admin_panel') %></h1>
      <ul class="space-y-4">
        <li><%= link_to t('layouts.admin_dashboard.user_list'), users_path, class: "block py-2 px-4 hover:bg-gray-700" %></li>
        <li><%= link_to t('layouts.admin_dashboard.movie_list'), movies_path, class: "block py-2 px-4 hover:bg-gray-700" %></li>
        <li><%= link_to t('layouts.admin_dashboard.add_movie'), new_movie_path, class: "block py-2 px-4 hover:bg-gray-700" %></li>
        <li><%= button_to t('layouts.admin_dashboard.log_out'), logout_admin_users_path, method: :delete, class: "block py-2 px-4 hover:bg-gray-700" %></li>
      </ul>
    </div>
    <div class="flex-1">
      <%= yield %>
    </div>
  </div>

</body>
</html>
